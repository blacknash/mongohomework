var cur = db.students.find();
while(cur.hasNext()){ 
	var obj =  cur.next();
	var scoreArray =obj.scores; 
	var min = 100;
	for(i in scoreArray){ 
		if(scoreArray[i].score < min){
			min = scoreArray[i].score;
		}
	}  
	db.students.update({'_id': obj._id} , {$pull : {'scores' : {'score' : min ,'type': 'homework'Â } } } );
}
