db.grades.aggregate([
	{$unwind:"$scores"},
	{$match:
		{
			"scores.type" : {$in:["exam","homework"]}
		}
	},
	{ $group :
		{ 
			_id : {"student_id" : "$student_id","class_id":"$class_id"},
			avgScore : { $avg : "$scores.score" } 
		} 
	},
	{$project:
		{
			_id : 0,
			s : "$_id.student_id",
			c : "$_id.class_id",
			a : "$avgScore"
		}
	},
	{$group:
		{
			_id :Â {"class" : "$c"},
			avg : {$avg:"$a"}
		}
	},
	{$sort:{avg:1}}
])



db.city.aggregate([
	{$match:
		{
			"city" : {$regex: /^(\d)/}
		}
	},
	{$group:
		{
			_id: "",
			pop : {$sum : "$pop"}
		}
	}
])
